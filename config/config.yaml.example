# TVM Log Upload System Configuration
# Copy this to config.yaml and customize for your vehicle
vehicle_id: "vehicle-001"

log_directories:
  - /tmp/tvm-test-logs

s3:
  bucket: tvm-logs-test
  region: cn-north-1
  credentials_path: /tmp/aws-credentials

# upload:
#   schedule: "15:00"
#   file_stable_seconds: 60

upload:
  schedule: "15:00"  # Daily upload time
  file_stable_seconds: 60
  operational_hours:
    enabled: true
    start: "09:00"  # Start uploads
    end: "16:00"    # Stop uploads
  queue_file: /var/lib/tvm-upload/queue.json

disk:
  reserved_gb: 70
  cleanup_threshold: 0.90
  critical_threshold: 0.95

# monitoring:
#   cloudwatch_enabled: false
#   local_log_path: /tmp/tvm-uploader.log

monitoring:
  cloudwatch_enabled: true
  publish_interval_seconds: 3600  # 1 hour
  low_upload_threshold_mb: 100
  alarm_evaluation_periods: 3

retry:
  max_attempts: 10
