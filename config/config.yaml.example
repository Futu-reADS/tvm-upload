# TVM Log Upload System Configuration
# Copy this to config.yaml and customize for your vehicle

vehicle_id: "vehicle-001"

# Directories to monitor for log files
log_directories:
  - /var/log/autoware/bags
  - /var/log/autoware/system

# AWS S3 configuration
s3:
  bucket: tvm-logs
  region: cn-north-1  # or cn-northwest-1
  credentials_path: /etc/tvm-upload/.aws

# Upload settings
upload:
  schedule: "15:00"  # HH:MM format, 24-hour
  file_stable_seconds: 60

# Disk management
disk:
  reserved_gb: 70
  warning_threshold: 0.90  # 90%
  critical_threshold: 0.95  # 95%

# Monitoring
monitoring:
  cloudwatch_enabled: true
  local_log_path: /var/log/tvm-upload/uploader.log
